extends layout

block content
  h1= title

  ul
  each event in event_list
    li
      | #{event.date_formatted} - 
      a(href=event.url) #{event.name}
      |  - 
      if event.gift
        span.text-success #{event.gift.name}
      else
        span.text-danger No Gift
      if event.recipient
        |  - #{event.recipient.name}

  else
    li There are no book copies in this library.